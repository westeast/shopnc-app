<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <include layout="@layout/include_titlebar"/>

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/rotate_header_web_view_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        app:ptr_duration_to_close="200"
        app:ptr_duration_to_close_header="1000"
        app:ptr_keep_header_when_refresh="true"
        app:ptr_pull_to_fresh="false"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        app:ptr_resistance="1.7">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/stand_bg"
                    android:divider="@drawable/ic_img_line_v"
                    android:dividerPadding="16dp"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <LinearLayout
                        android:id="@+id/ll_my_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <ImageView
                            android:id="@+id/iv_my_order"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/ic_my_order"
                            android:gravity="end"
                            />

                        <TextView
                            android:id="@+id/tv_my_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:paddingLeft="7dp"
                            android:paddingRight="45dp"
                            android:text="我的订单"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_my_trade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="16dp"
                            android:background="@drawable/ic_my_trader"
                            android:gravity="end"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="start"
                            android:paddingLeft="4dp"
                            android:paddingRight="45dp"
                            android:text="我的交易"
                            android:textSize="14sp"
                            />
                    </LinearLayout>

                </LinearLayout>

                <in.srain.cube.views.loadmore.LoadMoreListViewContainer
                    android:id="@+id/load_more_list_view_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cube_mints_white">

                    <ListView
                        android:id="@+id/list_fragment_topic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:clipToPadding="false"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="1px"
                        android:listSelector="@android:color/transparent"
                        android:paddingBottom="8dp"
                        android:scrollbars="none"/>

                </in.srain.cube.views.loadmore.LoadMoreListViewContainer>
            </LinearLayout>

        </ScrollView>

    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>